@name = user_reset_password_as_admin
@entityName = Oro\Bundle\UserBundle\Entity\User
@subject = Reset password
@isSystem = 1
@isEditable = 1

<h1>Hello, {{ entity|oro_format_name }}!</h1>

<p>This email was sent to you by administrator.</p>

{% set url = url('oro_user_reset_reset', { token: user.confirmationToken }) %}

<p>To reset your password - please visit <a href="{{ url }}">{{ url }}</a></p>
