{% extends 'OroUIBundle:Dashboard:tabbedWidget.html.twig' %}
{% import 'OroEmailBundle::macros.html.twig' as Email %}

{% set widgetName = 'recent-emails' %}
{% set widgetTitle = 'oro.dashboard.recent_emails.title'|trans %}

{% block content %}
    {% set tabs = [{
        'url': path('oro_user_dashboard_recentemails', {'activeTab': 'inbox', 'contentType': 'tab'}),
        'name': 'inbox',
        'label': 'oro.dashboard.recent_emails.inbox'|trans
    },
    {
        'url': path('oro_user_dashboard_recentemails', {'activeTab': 'sent', 'contentType': 'tab'}),
        'name': 'sent',
        'label': 'oro.dashboard.recent_emails.sent'|trans
    }] %}

    {{ parent() }}
    {{ Email.renderJs() }}
{% endblock %}

{% block actions %}
    {% set actions = [{
        'url': path('oro_user_view', {'id': currentUserId}),
        'icon': 'envelope',
        'label': 'oro.dashboard.recent_emails.view_all'|trans
    }] %}

    {{ parent() }}
{% endblock %}
