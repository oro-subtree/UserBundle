{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridId = 'roles-grid' %}
{% block content %}
    {% set pageTitle = 'Roles' %}
    {% set buttons = [] %}
    {% if resource_granted('oro_user_role_create') %}
        {% set buttons = buttons|merge([UI.addButton({'path' : path('oro_user_role_create'), 'title' : 'Create role', 'label' : 'Create role'})]) %}
    {% endif %}
    {{ parent() }}
{% endblock %}
